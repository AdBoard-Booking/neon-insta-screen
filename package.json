  "keywords": [
    "selfie",
    "billboard",
    "digital",
    "upload",
    "whatsapp",
    "instagram",
    "viral",
    "social-media",
    "ugc"
  ],
  "author": "Your Name",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "node --max-old-space-size=4096 server.js",
